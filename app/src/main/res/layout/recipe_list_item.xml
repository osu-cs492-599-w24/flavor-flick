<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp">

        <ImageView
            android:id="@+id/iv_strMealThumb"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_strMeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/iv_strMealThumb"
        />

        <TextView
            android:id="@+id/tv_strCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_strMeal"
            />

        <TextView
            android:id="@+id/tv_strarea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_strCategory"
        />

        <TextView
            android:id="@+id/tv_strYoutube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_strarea"
        />

        <TextView
            android:id="@+id/tv_strSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_strYoutube"
        />

        <!-- x icon -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_strSource"
            >

            <ImageView
                android:id="@+id/imageViewCross"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_cross"
                app:tint="@color/cross"
                android:layout_marginEnd="150dp"
                />

            <!-- <3 icon -->
            <ImageView
                android:id="@+id/imageViewHeart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_heart"
                app:tint="@color/cross"
                />


        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>